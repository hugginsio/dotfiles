# app-specific aliases

## tmux

alias ta='tmux attach'
alias tl='tmux ls'
alias tk='tmux kill-server'
alias t='tmux new'

## neovim

alias vi='nvim'

## vs code

alias vsc='code .'
alias vscn='code . --new-window'

## idea

alias idea='open -a "IntelliJ IDEA.app" --args "$@"'

## lazygit

alias lg='lazygit'
