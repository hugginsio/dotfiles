    url = "https://github.com/tpope/vim-dotenv.git"
    clone.args = ["--depth", "1"]
    refreshPeriod = "168h"

[".vim/pack/hugginsio/start/fugitive/"]
    type = "git-repo"
    url = "https://github.com/tpope/vim-fugitive.git"
    clone.args = ["--depth", "1"]
    refreshPeriod = "168h"

[".vim/pack/hugginsio/start/speeddating/"]
    type = "git-repo"
    url = "https://github.com/tpope/vim-speeddating.git"
    clone.args = ["--depth", "1"]
