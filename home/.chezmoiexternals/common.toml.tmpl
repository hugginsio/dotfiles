["bin/kubectx"]
    type = "archive-file"
    {{ $kctxVersion := (gitHubLatestRelease "ahmetb/kubectx").TagName -}}
    url = "https://github.com/ahmetb/kubectx/releases/download/{{ $kctxVersion }}/kubectx_{{ $kctxVersion }}_{{ .chezmoi.os }}_{{ .chezmoi.arch }}.tar.gz"
    path = "kubectx"
    refreshPeriod = "168h"
    executable = true

{{ end -}}
