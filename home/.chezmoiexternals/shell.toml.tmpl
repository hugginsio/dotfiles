{{ if (and (not .ephemeral) (not .server)) -}}

["AppData\\Local\\k9s\\skins\\catppuccin-mocha.yaml"]
    type = "file"
    url = "https://raw.githubusercontent.com/catppuccin/k9s/main/dist/catppuccin-mocha.yaml"
    refreshPeriod = "168h"

{{ if (ne .osid ".windows") -}}

["Library/Application Support/k9s/skins/catppuccin-mocha.yaml"]
    type = "file"
    url = "https://raw.githubusercontent.com/catppuccin/k9s/main/dist/catppuccin-mocha.yaml"
    refreshPeriod = "168h"

["bin/"]
    type = "archive"
    {{ $nuVersion := (gitHubLatestRelease "nushell/nushell").TagName -}}
    {{ $nuOs := .chezmoi.os -}}
    {{ if eq $nuOs "linux" -}}
    {{     $nuOs = "linux-gnu" -}}
    {{ end -}}
    url = "https://github.com/nushell/nushell/releases/download/{{ $nuVersion }}/nu-{{ $nuVersion }}-{{ .narch }}-{{ .mfg }}-{{ $nuOs }}.tar.gz"
    stripComponents = 1
    refreshPeriod = "168h"
    executable = true

["bin/atuin"]
    type = "archive-file"
    {{ $atuinVersion := (gitHubLatestRelease "atuinsh/atuin").TagName -}}
    url = "https://github.com/atuinsh/atuin/releases/download/{{ $atuinVersion }}/atuin-{{ .narch }}-{{ .mfg }}-{{ .chezmoi.os }}.tar.gz"
    path = "atuin"
    stripComponents = 1
    refreshPeriod = "168h"
    executable = true

{{ end -}}

{{ end -}}
