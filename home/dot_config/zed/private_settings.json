// https://zed.dev/docs/configuring-zed

{
  "show_edit_predictions": false,
  "edit_predictions_disabled_in": ["comment"],
  "edit_predictions": {
    "disabled_globs": [],
    "mode": "subtle"
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "file_types": {
    "Helm": ["**/helm/**/*.yaml", "**/helm/**/*.tpl"]
  },
  "preferred_line_length": 130,
  "base_keymap": "VSCode",
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_size": 14,
  "calls": {
    "mute_on_join": true
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "languages": {
    "Markdown": {
      "soft_wrap": "editor_width"
    }
  },
  "project_panel": {
    "indent_size": 10,
    "indent_guides": {
      "show": "never"
    }
  },
  "relative_line_numbers": true,
  "terminal": {
    "shell": {
      "with_arguments": {
        "program": "nu",
        "args": ["--interactive", "--login"]
      }
    }
  },
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "ui_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 14,
  "vim_mode": true,
  "vim": {
    "enable_vim_sneak": true
  }
}
