# https://taskwarrior.org/
# vim: ft=conf
# Use the command 'task show' to see all defaults and overrides

# Files
data.location=$HOME/Workspaces/taskwarrior/tasks/

# Theme
include hugginsio.theme

# Changelog tracking
news.version=2.6.0

# Taskwarrior TUI
uda.taskwarrior-tui.selection.indicator=-
uda.taskwarrior-tui.selection.bold=no
uda.taskwarrior-tui.task-report.show-info=true
uda.taskwarrior-tui.task-report.looping=false
uda.taskwarrior-tui.task-report.prompt-on-delete=true
uda.taskwarrior-tui.style.report.selection=black on white
uda.taskwarrior-tui.style.report.scrollbar=white
uda.taskwarrior-tui.quick-tag.name=NEXT

# Tag urgency
urgency.user.tag.CUSTOMER.coefficient=-5
urgency.user.tag.NEXT.coefficient=5
urgency.user.tag.STAGED.coefficient=-5
urgency.user.tag.TEAM.coefficient=-5

# Built-in urgency
urgency.active.coefficient=10
urgency.uda.priority.H.coefficient=9
urgency.uda.priority.L.coefficient=-3

# Sync
sync.local.server_dir=$HOME/Workspaces/taskwarrior/sync/
