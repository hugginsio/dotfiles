# https://github.com/koekeishiya/skhd/issues/1

# restart yabai
shift + ctrl + alt + cmd - r : yabai --restart-service"

# kitty
shift + alt - t : kitty ~

# focus window
shift + alt - h : yabai -m window --focus west
shift + alt - j : yabai -m window --focus south
shift + alt - k : yabai -m window --focus north
shift + alt - l : yabai -m window --focus east

# swap managed window
shift + ctrl + alt - h : yabai -m window --swap west
shift + ctrl + alt - j : yabai -m window --swap south
shift + ctrl + alt - k : yabai -m window --swap north
shift + ctrl + alt - l : yabai -m window --swap east

# balance size of windows
shift + alt - b : yabai -m space --balance

# toggle window zoom
shift + alt - z : yabai -m window --toggle zoom-fullscreen

# toggle window split type
shift + alt - e : yabai -m window --toggle split
shift + alt - r : yabai -m space --rotate 90

# move windows to specific spaces
shift + ctrl - 1 : yabai -m window --space 1
shift + ctrl - 2 : yabai -m window --space 2
shift + ctrl - 3 : yabai -m window --space 3
shift + ctrl - 4 : yabai -m window --space 4
shift + ctrl - 5 : yabai -m window --space 5
shift + ctrl - 6 : yabai -m window --space 6
shift + ctrl - 7 : yabai -m window --space 7
shift + ctrl - 8 : yabai -m window --space 8
shift + ctrl - 9 : yabai -m window --space 9

# focus monitor
shift + ctrl - 1 : yabai -m display --focus 1
shift + ctrl - 1 : yabai -m display --focus 2
shift + ctrl - 1 : yabai -m display --focus 3
