# -*- mode: conf-toml -*-

[".asdf"]
    type = "git-repo"
    url = "https://github.com/asdf-vm/asdf.git"
    clone.args = ["--depth", "1"]
    refreshPeriod = "24h"

[".config/k9s/skin.yml"]
    type = "file"
    url = "https://raw.githubusercontent.com/catppuccin/k9s/main/dist/mocha.yml"
    refreshPeriod = "168h"

[".vim/colors/catppuccin_mocha.vim"]
    type = "file"
    url = "https://raw.githubusercontent.com/catppuccin/vim/main/colors/catppuccin_mocha.vim"
    refreshPeriod = "168h"

{{ if not .ephemeral -}}
[".emacs.d"]
    type = "git-repo"
    url = "https://github.com/hlissner/doom-emacs.git"
    clone.args = ["--depth", "1"]
{{ end -}}
